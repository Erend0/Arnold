<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NEA.CustomPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Custom Routines" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center" TextDecorations="Underline"/>
            <ListView x:Name="ListofCustomDays"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding DayName}"
                                       TextColor="Black"
                                       FontSize="Large" 
                                       Padding="10"
                                       BackgroundColor="White"
                                       Margin="20"
                                       />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Text="Add Routine" TextColor="White" Pressed="Routine_Pressed" Padding="12.5" HorizontalOptions="Start" CornerRadius="20" WidthRequest="160"/>
                <Button Text="Remove Routines" TextColor="White" HorizontalOptions="End" BackgroundColor="Red" Padding="12.5" CornerRadius="12" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>