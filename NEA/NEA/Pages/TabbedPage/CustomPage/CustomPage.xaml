<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NEA.CustomPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Routines" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
            <ListView x:Name="ListofCustomDays"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding DayName}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Add Routine" TextColor="White" BackgroundColor="Black" Pressed="Routine_Pressed"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>