<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NEA.Pages.TabbedPage.CustomPage.CreateRoutinePage"
             BackgroundColor="Black"
             >
    <ContentPage.Content>
        <StackLayout Padding="10">
            <StackLayout x:Name="ExerciseAdd" Margin="20">
                <!--- View -->
                <Entry x:Name="Sets" Placeholder="Sets" Keyboard="Numeric"/>
                <Entry x:Name="Reps" Placeholder="Reps" Keyboard="Numeric"/>
                <Button Text="Add Exercise" BackgroundColor="SlateBlue" Pressed="AddExercise_Pressed"/>
            </StackLayout>

            <ListView x:Name="ListofExercises"
                      HasUnevenRows="True"
                      Margin="20">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding ExerciseName}" />
                                <Label Text="{Binding Sets}" />
                                <Label Text="{Binding Reps}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>