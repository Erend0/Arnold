<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NEA.TrackPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label x:Name="TotalSets" Text="" HorizontalOptions="Start"/>
            <Label x:Name="TotalReps" Text="" HorizontalOptions="End"/>
            <Label x:Name="TotalTime" Text="" HorizontalOptions="Start"/>
            <Label x:Name="TotalVolume" Text="" HorizontalOptions="End"/>

            <StackLayout Padding="20">
                <Label Text="Latest Workout" FontSize="Header"/>
                <Label Text="Sets" HorizontalOptions="Start"/>
                <Label Text="Reps" HorizontalOptions="Center"/>
                <Label Text="TotalTime" HorizontalOptions="End"/>
                <Button Text="Remove Workout Data" Clicked="RemoveLatest_Clicked"/>
            </StackLayout>
            <Button Text="Add or remove data" Clicked="AlterData_Clicked" />

            <Button Text="Log out" Clicked="Button_Clicked" VerticalOptions="End" CornerRadius="15"/>
            <Button x:Name ="Settings" Text="Settings" Clicked="Settings_Clicked" CornerRadius="15"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>